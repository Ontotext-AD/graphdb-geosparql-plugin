<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="repo" lazy-init="true" class="com.useekm.spring.ObjectRepositoryProvider">
        <property name= "sail">
            <bean class="com.useekm.indexing.IndexingSail">
                <constructor-arg>
                    <bean class="com.useekm.inference.SimpleTypeInferencingSail">
                        <constructor-arg ref="sail" />
                    </bean>
                </constructor-arg>
                <constructor-arg ref="indexerSettings" />
            </bean>        
        </property>
    </bean>
    <bean id="sail" lazy-init="true" class="com.useekm.junit.SailWithDataDirFactory">
        <property name="object">
            <bean class="org.eclipse.rdf4j.sail.nativerdf.NativeStore">
                <property name="tripleIndexes" value="spoc,posc,ospc" />
            </bean>
        </property>
    </bean>
</beans>